<%= form_for(@setting) do |f| %>
<h2>New Settings</h2>
    
    <%if flash.present?%>
<div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3" style="padding:25px 0">
        <%= render partial: "shared/flash_messages", flash: flash %>
    </div>
</div>
<%end%>

<% if @setting.errors.any? %>
    <% @setting.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
    <% end %>
<% end %>
 
    	<div class="field">
        	<%= f.text_field :country, placeholder: "Country", class:"form-control" %>
    	</div>
    	<div class="field">
        	<%= f.text_field :language, placeholder: "Language", class:"form-control" %>
    	</div>    
    	 
    	<div class="field">
        	<%= f.submit "Guardar", class:"btn btn-sm btn-danger white pull-right", style:"margin-top: 15px;" %>
    	</div>
	<% end %>

    

 
